{
  "description": "Demonstrating webRequests",
  "manifest_version": 2,
  "name": "Block webpage",
  "version": "1.0",

  "icons": {
    "60": "icons/icon-60.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "storage",
    "management",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon-60.png",
    "default_title": "Block webpage",
    "default_popup": "popup/choose_popup.html"
  }
}
